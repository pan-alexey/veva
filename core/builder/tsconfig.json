{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist/",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "strict": true,
    "removeComments": true,
    "moduleResolution": "node",
    "types": ["node", "webpack-env"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/__test__/*"
  ],
  "include": [
    "src/**/*",
    "**/*.ts"
  ]
}
