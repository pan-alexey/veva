{
	"compilerOptions": {
		"outDir": "./dist",
		"esModuleInterop": true,
		"target": "es5",
		"allowSyntheticDefaultImports":true,
		"moduleResolution": "node",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": true,
		"jsx": "react",
		"jsxFactory": "h"
	},
	"lib": [
		"dom",
		"es2017"
	],
	"baseUrl": ".",
	"include": ["src/**/*"],
	"files": ["src/index.d.ts"],
	"exclude": [
		"dist"
	]
}