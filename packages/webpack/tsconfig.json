{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "skipLibCheck": false,
    "allowSyntheticDefaultImports":true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es2019",
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": false,
    "baseUrl": ".",
    "types": ["node"]
  },
  "files": [
    "src/index.ts",
    "src/index.d.ts"
  ]
  ,"exclude": [
    "node_modules",
    "dist",
    "**/__test__/*"
  ],
}