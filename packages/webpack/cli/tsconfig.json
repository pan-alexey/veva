{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2019",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node"]
  },
  "exclude": [
    "webpack.config.js",
    "node_modules",
    "dist",
    "**/__tests__/*"
  ]
}
